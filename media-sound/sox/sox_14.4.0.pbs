DESCRIPTION="The swiss army knife of sound processing programs"
HOMEPAGE="http://sourceforge.net/projects/sox"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://downloads.sourceforge.net/"$N"/"$N-$V".tar.bz2"
CHECKSUM="12dfc57e503ed4e18cedcac292cdae7982281978"

RDEPEND="file ffmpeg libmodplug libbluray bzip2 libtheora opus wavpack libmad libid3tag twolame dbus-libs libao"
BDEPEND=""
RECOMMENDED=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_patch() {
    dopatch sox_default_audio_driver_fallback.patch
    dopatch sox-ffmpeg0.11.patch
}

pbs_config() {
    config+="--with-dyn-default"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
