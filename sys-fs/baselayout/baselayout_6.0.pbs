DESCRIPTION="Base layout filesystem for StartOS"
HOMEPAGE="http://www.startos.com"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>
          chenqixing@ivali.com"
YARCH="any"

SRC_URI=""

RDEPEND="bash coreutils procps grep findutils shadow"
BDEPEND=""

INSTALL="$N.install"

pbs_install() {
    docp "$FILESDIR"/lsb_release      "$PKGDIR"/usr/bin/
    docp "$FILESDIR"/startos-release  "$PKGDIR"/etc/
    docp "$FILESDIR"/usb-load-ehci-first "$PKGDIR"/usr/lib/modules-load.d/
}
