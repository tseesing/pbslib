DESCRIPTION="Music management and playback software for GNOME"
HOMEPAGE="http://projects.gnome.org/rhythmbox/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://ftp.gnome.org/pub/GNOME/sources/$N/$V/$N-$V.tar.xz"
CHECKSUM="a5c0a18a7c76133d36c7dcbdc37e304eae8272703985b17b540d68603b0c76d5"

RDEPEND="libgnome-keyring libpeas tdb json-glib libnotify totem-pl-parser brasero-libs lirc libgpod grilo libmtp libdmapsharing"
BDEPEND="intltool gobject-introspection vala"
RECOMMENDED=""
CONFLICT=""

INSTALL="$N.install"

pbs_unpack() {
    dounpack
}

pbs_patch() {
    dopatch Disable-the-context-pane-plugin-when-webkit-isn-t-available.patch
    dopatch rhythmbox-2.98-xinitthreads.patch
}
pbs_config() {
    config+="--disable-static
             --enable-daap 
             --enable-python 
             --enable-vala 
             --with-mdns=avahi 
             --disable-scrollkeeper 
             --without-webkit"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
