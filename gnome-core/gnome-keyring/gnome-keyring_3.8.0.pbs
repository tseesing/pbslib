DESCRIPTION="Keeps encryption passwords and other secrets for users."
HOMEPAGE="http://www.gnome.org"
LICENSE="GPL,LGPL"
PACKAGER="chenqixing@ivali.com
          Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://ftp.gnome.org/pub/GNOME/core/3.8/3.8.0/sources/$N-$V.tar.xz"
CHECKSUM=""

RDEPEND="gtk3 gcr libcap"
BDEPEND="intltool"
RECOMMENDED=""

INSTALL="$N.install"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--disable-static
             --disable-schemas-compile
             --with-root-certs=/etc/ssl/certs 
             --enable-pam
             --with-pam-dir=/usr/lib"$LIBDIRSUFFIX"/security" 
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
