DESCRIPTION="binaries used by initramfs-tools"
HOMEPAGE="https://github.com/StartOS/initramfs-tools-bin"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="git://github.com/StartOS/initramfs-tools-bin.git"

RDEPEND="initramfs-tools glibc systemd"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_build() {
    domake
}

pbs_install() {
    docp wait-for-root rzscontrol "$PKGDIR"/usr/lib/initramfs-tools/bin
}
