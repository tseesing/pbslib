DESCRIPTION="X Window System initializer"
HOMEPAGE="http://xorg.freedesktop.org/"
LICENSE="custom"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
GROUP="x11-apps"

SRC_URI="http://xorg.freedesktop.org/releases/individual/app/"$N-$V".tar.bz2"

RDEPEND="libX11 glibc libxcb libXau libXdmcp"
BDEPEND=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    dodoc COPYING
    cd "$PKGDIR"
    domv usr/lib"$LIBDIRSUFFIX"/X11/xinit etc/X11
    doln /etc/X11/xinit    usr/lib"$LIBDIRSUFFIX"/X11
}
