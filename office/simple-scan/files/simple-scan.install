
files="/etc/gconf/schemas/simple-scan.schemas"

post_install() {
    gnome2_install_schema $files
    update-desktop-database
    gtk-update-icon-cache -f -q -t ||true
}

pre_remove() {
    gnome2_uninstall_schema $files ||true
}

post_remove() {
    update-desktop-database
    gtk-update-icon-cache -f -q -t ||true
}

post_upgrade() {
    post_remove
}

post_downgrade() {
    post_remove
}
