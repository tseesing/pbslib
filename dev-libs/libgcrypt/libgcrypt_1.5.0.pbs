DESCRIPTION="general purpose crypto library based on the code used in GnuPG"
HOMEPAGE="http://www.gnupg.org/"
LICENSE="LGPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="ftp://ftp.gnupg.org/gcrypt/"$N"/"$N-$V".tar.bz2"
CHECKSUM="3e776d44375dc1a710560b98ae8437d5da6e32cf"

RDEPEND="glibc libgpg-error"
BDEPEND=""
OPIONAL=""

INSTALL="$N.install"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--disable-static --disable-padlock-support"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
