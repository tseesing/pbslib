DESCRIPTION="Cyrus saslauthd SASL authentication daemon"
HOMEPAGE="http://asg.web.cmu.edu/sasl/"
LICENSE="custom"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>
          chenqixing@ivali.com"
 
SRC_URI="ftp://ftp.andrew.cmu.edu/pub/cyrus-mail/"$N-$V".tar.gz"
CHECKSUM="341cffe829a4d71f2a6503d669d5a946"

RDEPEND="krb5 e2fsprogs glibc pam libldap openssl keyutils libsasl zlib"
BDEPEND=""
RECOMMENDED=""

OPTIONS="nolibtool"

pbs_unpack() {
    dounpack
}

pbs_patch() {
    dopatch 0027_db5_support.patch
}

pbs_config() {
    config+="--with-plugindir=/usr/lib$LIBDIRSUFFIX/sasl2
             --with-pam
             --enable-sql
             --enable-ldapdb
             --with-ldap
             --disable-static
             --with-saslauthd=/run/saslauthd
             --with-devrandom=/dev/urandom"
    doconfig
}

pbs_build() {
    make 
}

pbs_install() {
    cd saslauthd
    domkinstall sasldir=/usr/lib"$LIBDIRSUFFIX"/sasl2
    dodoc ../COPYING

    cd "$PKGDIR"    
    dounit saslauthd.service
    docp "$FILESDIR"/saslauthd etc/default/
    docp "$FILESDIR"/saslauthd.conf usr/lib/tmpfiles.d/
}
