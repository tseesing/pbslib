DESCRIPTION="Video Acceleration (VA) API for Linux"
HOMEPAGE="http://www.freedesktop.org/wiki/Software/vaapi"
LICENSE="MIT"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>
          chenqixing@ivali.com"

SRC_URI="http://www.freedesktop.org/software/vaapi/releases/"$N"/"$N-$V".tar.bz2"
CHECKSUM=""

RDEPEND="libX11 glibc libXext libXfixes libdrm libxcb libXau libXdmcp wayland gcc-libs libffi mesa libXdamage libXxf86vm systemd"
BDEPEND=""
RECOMMENDED="libva-vdpau-driver libva-intel-driver"
OPTIONAL="libva-vdpau-driver: vdpau back-end for nvidia
          libva-intel-driver: back-end for intel cards"  

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+=""
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    dodoc COPYING
}
