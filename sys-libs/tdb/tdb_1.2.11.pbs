DESCRIPTION="A Trivia Database similar to GDBM but allows simultaneous commits"
HOMEPAGE="http://tdb.samba.org"
LICENSE="GPLv3"
PACKAGER="Zhongxin Huang<huangzhongxin@ivali.com>
          chenqixing@ivali.com"

SRC_URI="http://samba.org/ftp/"$N"/"$N-$V".tar.gz"

RDEPEND="attr glibc libbsd python"
RECOMMENDED=""
BDEPEND=""
OPTIONAL="python: for python bindings"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--sysconfdir=/etc/samba"
    config=${config/--enable-shared/}
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}

