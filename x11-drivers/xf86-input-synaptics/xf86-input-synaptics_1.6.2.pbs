DESCRIPTION="Driver for Synaptics touchpads"
HOMEPAGE="http://cgit.freedesktop.org/xorg/driver/xf86-input-synaptics/"
LICENSE="custom"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
GROUP="x11-drivers"

SRC_URI="http://xorg.freedesktop.org/releases/individual/driver/"$N-$V".tar.bz2"

RDEPEND="xorg-server(>=1.13.0) libXtst libXi libXext libX11 libxcb libXau libXdmcp glibc mtdev"
BDEPEND=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    autoreconf -fi
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    dodoc COPYING
    docp "$FILESDIR"/10-synaptics.conf  "$PKGDIR"/etc/X11/xorg.conf.d/
}    

