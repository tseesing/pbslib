DESCRIPTION="http://xcb.freedesktop.org"
HOMEPAGE="http://xcb.freedesktop.org/"
LICENSE="custom"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://xorg.freedesktop.org/releases/individual/xcb/"$N-$V".tar.bz2"

RDEPEND="glibc libXau libXdmcp"
BDEPEND="xcb-proto libpthread-stubs libxslt"

pbs_unpack() {
    dounpack
}

pbs_patch() {
    dopatch libxcb-1.1-no-pthread-stubs.patch
}

pbs_config() {
    config+="--enable-xinput --disable-static"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    dodoc COPYING
}

