DESCRIPTION="GNU locale utilities"
HOMEPAGE="http://www.gnu.org/software/gettext/gettext.html"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://ftp.gnu.org/pub/gnu/"$N"/"$N-$V".tar.gz"
CHECKSUM="3dd55b952826d2b32f51308f2f91aa89"

RDEPEND="acl attr libcroco glib2 pcre glibc libxml2 zlib xz ncurses libunistring gcc-libs"
BDEPEND=""
OPTIONAL="cvs: for autopoint tool"

INSTALL="$N.install"

pbs_unpack() {
    dounpack
}

pbs_patch() {
    sed -i -e 's/libexpat.so.0/libexpat.so.1/' gettext-tools/src/x-glade.c
    # fix build issue with glibc-2.16
    sed -i -e '/gets is a/d' gettext-*/*/stdio.in.h    
}

pbs_config() {
    config+="--enable-csharp"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
