. /usr/lib/ybs/funcs 

post_install() {
    xdg-icon-resource forceupdate --theme hicolor &> /dev/null
    /usr/lib"$LIBDIRSUFFIX"/vlc/vlc-cache-gen -f /usr/lib"$LIBDIRSUFFIX"/vlc/plugins
    update-desktop-database -q
}

pre_remove() {
    rm -f /usr/lib"$LIBDIRSUFFIX"/vlc/plugins/plugins-*.dat ||return 0        
}

post_remove() {
    xdg-icon-resource forceupdate --theme hicolor &>/dev/null
    update-desktop-database -q
}
    
post_upgrade() {
    post_install
}

