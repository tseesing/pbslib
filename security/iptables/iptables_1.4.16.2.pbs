DESCRIPTION="Linux kernel packet control tool"
HOMEPAGE="http://www.iptables.org/"
LICENSE="GPL2"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://www.iptables.org/projects/"$N"/files/"$N-$V".tar.bz2"
CHECKSUM="57220bb26866a713073e5614f88071fc"

RDEPEND="glibc"
BDEPEND="linux-kernel-headers"
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_patch() {
    # use system
    rm include/linux/types.h
    dopatch 0503-extension_cppflags.patch
}

pbs_config() {
     config+="--enable-devel --enable-libipq"
     doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    cd "$PKGDIR"
    docp "$FILESDIR"/{empty.rules,simple_firewall.rules} etc/iptables/
    docp "$FILESDIR"/empty-{filter,mangle,nat,raw,security}.rules var/lib/iptables
    # install systemd files
    dounit iptables.service ip6tables.service 
    docp "$FILESDIR"/iptables-flush usr/lib/systemd/system/scripts
}
