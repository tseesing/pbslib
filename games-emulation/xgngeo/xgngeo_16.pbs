DESCRIPTION="A frontend for Gngeo in GTK"
HOMEPAGE="http://xgngeo.choplair.org/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://sourceforge.net/projects/xgngeo/files/Program%20releases/XGngeo-"$V"_final.tar.bz2"
CHECKSUM="741d8099b6560b1f82518dbff90bd08b"

RDEPEND="python py-gtk gngeo(=0.7)"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_patch() {
    dopatch fix-install-path.patch
}

pbs_config() {
    config+=""
