DESCRIPTION="D-Bus bindings for glib"
HOMEPAGE="http://dbus.freedesktop.org/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://dbus.freedesktop.org/releases/"$N"/"$N-$V".tar.gz"
CHECKSUM="d33959a9c0c6a158f5ac6d640316e89e"

RDEPEND="glibc dbus-libs glib2 expat libffi pcre zlib"
BDEPEND="pkgconfig"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--enable-static=no 
             --enable-bash-completion=no"
    doconfig
}

pbs_install() {
    domkinstall
}
