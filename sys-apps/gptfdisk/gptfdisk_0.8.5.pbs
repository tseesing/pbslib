DESCRIPTION="gdisk - GPT partition table manipulator for Linux"
HOMEPAGE="http://www.rodsbooks.com/gdisk"
LICENSE="GPL"
PACKAGER="StartOS Developers"

SRC_URI="http://downloads.sourceforge.net/project/"$N"/"$N"/"$V"/"$N-$V".tar.gz"
CHECKSUM="15cc691f28212c157e05315662ed6b76ffdcc8de6fc118fa21c81ef5aae84af9"

RDEPEND="gcc-lib glibc icu ncurses popt util-linux-ng"
RECOMMENDED=""
BDEPEND=""
OPTIONAL=""
CONFLICT=""

pbs_unpack() {
        dounpack
}

pbs_build() {
	domake
}

pbs_install() {
	install -d "$destdir"/usr/{bin,share/{doc/gdisk,man/man8}}
	install -t "$destdir/usr/bin" {,c,s}gdisk fixparts
	install -m644 -t "$destdir/usr/share/man/man8" {{,c,s}gdisk,fixparts}.8
	install -m644 -t "$destdir/usr/share/doc/gdisk" README NEWS
}

