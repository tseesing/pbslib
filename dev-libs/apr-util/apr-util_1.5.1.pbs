DESCRIPTION="Apache Portable Runtime Utility Library "
HOMEPAGE="http://apr.apache.org/"
LICENSE="APACHE"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="ftp://ftp.oregonstate.edu/pub/apache/apr/"$N-$V".tar.bz2"

RDEPEND="expat apr util-linux-libs glibc libldap libsasl openssl zlib unixodbc libtool gdbm berkeley-db freetds"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--with-apr=/usr 
             --without-pgsql 
             --without-mysql 
             --without-sqlite2 
             --without-sqlite3 
             --with-berkeley-db=/usr 
             --with-gdbm=/usr 
             --with-ldap"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
