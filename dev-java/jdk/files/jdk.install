
post_install() {
    . /etc/profile.d/jdk.sh
    [ -e /usr/share/java ] || ln -sf "$JAVA_HOME" /usr/share/java
        echo "The jdk package is licensed software."
        echo "You MUST read and agree to the license stored in"
        echo "/opt/java/LICENSE before using it."
}

post_upgrade() {
    post_install
}
