#!/bin/sh

OPTION=FRAMEBUFFER
PREREQ="framebuffer console_setup brltty"
[ -f /scripts/functions ] && . /scripts/functions

prereqs()
{
        echo "$PREREQ"
}

case $1 in
prereqs)
        prereqs
        exit 0
        ;;
esac

printf '\033[?25l' > /dev/tty7
/usr/sbin/plymouthd --mode=boot --attach-to-session --pid-file=/run/plymouth.pid --tty=tty7
/usr/bin/plymouth show-splash
