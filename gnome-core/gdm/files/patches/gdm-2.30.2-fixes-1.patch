+AC_ARG_WITH(dbus-daemon-dir,
+            AS_HELP_STRING([--with-dbus-daemon-dir=<dir>],
+                           [where D-BUS daemon directory is]))
 AC_ARG_WITH(dbus-sys,
             AS_HELP_STRING([--with-dbus-sys=<dir>],
 	                   [where D-BUS system.d directory is]))
