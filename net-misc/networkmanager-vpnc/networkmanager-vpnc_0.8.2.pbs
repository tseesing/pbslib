DESCRIPTION="NetworkManager VPNC plugin, Cisco compatible vpn"
HOMEPAGE="http://www.gnome.org/projects/NetworkManager/"
LICENSE="GPL-2"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://ftp.gnome.org/pub/gnome/sources/NetworkManager-vpnc/0.8/NetworkManager-vpnc-"$V".tar.bz2"

RDEPEND="gconf libglade libgnome-keyring networkmanager"
BDEPEND="eggdbus"
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    sed -ie 's/-Werror//' configure
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
