DESCRIPTION="A low-latency audio server"
HOMEPAGE="http://jackaudio.org/"
LICENSE="GPL,LGPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://jackaudio.org/downloads/"$N-$V".tar.gz"

RDEPEND="glibc readline ncurses alsa-lib libsamplerate libsndfile flac libvorbis libogg celt"
BDEPEND=""
RECOMMENDED="celt"
OPTIONAL="celt: NetJACK driver"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+=""
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    docp jack/jslist.h "$PKGDIR"/usr/include/jack/
    cd "$PKGDIR"
    # configure realtime access/scheduling
    docp "$FILESDIR"/99-audio.conf etc/security/limits.d/
    docp "$FILESDIR"/40-hpet-permissions.rules usr/lib/systemd/rules.d/
}
