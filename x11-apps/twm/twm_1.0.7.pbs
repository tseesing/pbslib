DESCRIPTION="Tab Window Manager for the X Window System"
HOMEPAGE="http://www.x.org/wiki/"
LICENSE="custom"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
GROUP="x11-apps"

SRC_URI="http://xorg.freedesktop.org/releases/individual/app/"$N-$V".tar.bz2"

RDEPEND="libXext libXmu libXt libX11 libICE libSM glibc libxcb libXau libXdmcp util-linux-libs"
BDEPEND="util-macros"

pbs_unpack() {
    dounpack
}

pbs_config() {
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    dodoc COPYING
    docp src/system.twmrc "$PKGDIR"/etc/X11/twm/
    doln /etc/X11/twm     "$PKGDIR"/usr/share/X11/twm
}

