
post_install() {
    dogroupadd adbusers
    cat << EOF
===> In order to use adb, you have to be in the 'adbusers' group
===> For that, use: gpasswd -a USERNAME adbusers
EOF
}

post_remove() {
    dogroupdel adbusers ||true
}

post_upgrade() {
    post_install
}

post_downgrade() {
    post_install
}
