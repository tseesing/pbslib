DESCRIPTION="ALSA extra plugins"
HOMEPAGE="http://www.alsa-project.org/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>
          chenqixing@ivali.com"

SRC_URI="ftp://ftp.alsa-project.org/pub/plugins/"$N-$V".tar.bz2"
CHECKSUM=""

RDEPEND="x264 ffmpeg libvpx"
BDEPEND=""
OPTIONAL="pulseaudio: PulseAudio plugin
          jack-audio-connection-kit: Jack plugin
          ffmpeg: libavcodec resampling plugin
          libsamplerate: libsamplerate resampling plugin
          speex: libspeexdsp resampling plugin"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+=""
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    dodoc doc/README* doc/*.txt
}
