DESCRIPTION="Standard Themes for GNOME Applications"
HOMEPAGE="http://www.gnome.org/"
LICENSE="GPL"
PACKAGER="chenqixing@ivali.com
          Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://ftp.gnome.org/pub/GNOME/sources/$N/3.8/$N-$V.tar.xz"
CHECKSUM=""

RDEPEND="librsvg gtk3"
BDEPEND="intltool gtk2(>=2.14.15)"
RECOMMENDED=""
OPTIONAL="gtk-engines: HighContrast GTK2 theme"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--enable-all-themes"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
