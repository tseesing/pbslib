DESCRIPTION="a portable, embeddable Scheme implementation written in C"
HOMEPAGE="http://www.gnu.org/software/guile/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com"

SRC_URI="http://ftp.gnu.org/pub/gnu/"$N"/"$N-$V".tar.xz"
CHECKSUM=""

RDEPEND="gc libffi libunistring glibc gmp libtool readline ncurses"
BDEPEND=""
RECOMMENDED=""

INSTALL="$N.install"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--disable-static --disable-error-on-warning"
    doconfig
}

pbs_build() {
    domake LDFLAGS+="-lpthread"
}

pbs_install() {
    domkinstall
}
