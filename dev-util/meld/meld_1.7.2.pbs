DESCRIPTION="A graphical diff and merge tool"
HOMEPAGE="http://meldmerge.org/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
YARCH="any"

SRC_URI="http://ftp.gnome.org/pub/GNOME/sources/$N/1.7/$N-$V.tar.xz"
CHECKSUM=""

RDEPEND="py-gtk py-gobject"
RECOMMENDED="py-gtksourceview"
BDEPEND=""
OPTIONAL=""
CONFLICT=""

pbs_unpack() {
    dounpack
}

pbs_build() {
    make prefix=/usr
}

pbs_install() {
    make prefix=/usr DESTDIR="$PKGDIR" install
}
