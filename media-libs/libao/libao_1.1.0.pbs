DESCRIPTION="A cross-platform audio library"
HOMEPAGE="http://www.xiph.org/ao/"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>
          chenqixing@ivali.com"

SRC_URI="http://downloads.xiph.org/releases/ao/"$N-$V".tar.gz"

RDEPEND="glibc pulseaudio json-c dbus-libs libxcb libsndfile libasyncns libXau libXdmcp flac libvorbis libogg alsa-lib"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--enable-alsa-mmap"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    docp "$FILESDIR"/libao.conf "$PKGDIR"/etc/
}
