DESCRIPTION="An 80x86 assembler designed for portability and modularity"
HOMEPAGE="http://nasm.sourceforge.net/"
LICENSE="BSD"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://www.nasm.us/pub/"$N"/releasebuilds/"$V"/"$N-$V".tar.bz2"
CHECKSUM="d3c50875fd923b782749f883294336ed"

RDEPEND="glibc"
BDEPEND="perl"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+=""
    doconfig
}

pbs_build() {
    domake
    domake -C doc info
}

pbs_install() {
    make INSTALLROOT="$PKGDIR" install
    docp doc/info/* "$PKGDIR"/usr/share/info/
    dodoc LICENSE
}
