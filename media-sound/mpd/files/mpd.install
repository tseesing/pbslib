
post_install() {
    dogroupadd -r -g 45 mpd >/dev/null
    douseradd -r -u 45 -g mpd -d /var/lib/mpd -s /bin/true -G audio mpd >/dev/null
    echo '==> Now create a /etc/mpd.conf file; see: /usr/share/mpd/mpd.conf.example'
}

post_remove() {
    douserdel mpd >/dev/null
    dogroupdel mpd >/dev/null
}

post_upgrade() {
    post_install
}

post_downgrade() {
    post_install
}
