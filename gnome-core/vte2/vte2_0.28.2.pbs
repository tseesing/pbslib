DESCRIPTION="Terminal emulator widget"
HOMEPAGE="http://library.gnome.org/devel/vte/"
LICENSE="LGPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://ftp.gnome.org/pub/GNOME/sources/vte/0.28/vte-$V.tar.xz"
CHECKSUM="86cf0b81aa023fa93ed415653d51c96767f20b2d7334c893caba71e42654b0ae"

RDEPEND="vte-common gtk2 ncurses"
BDEPEND="py-gtk intltool gobject-introspection"

pbs_unpack() {
    dounpack
}

pbs_patch() {
    dopatch make_alt_work.patch
}

pbs_config() {
    # Warning: type-punning to incomplete type might break strict-aliasing rules
    export CFLAGS="$CFLAGS -fno-strict-aliasing"
    config+="--with-gtk=2.0 
             --enable-introspection 
             --enable-python 
             --disable-static"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
    # Provided by vte-common (vte splite)
    rm "$PKGDIR"/usr/libexec/gnome-pty-helper
}
