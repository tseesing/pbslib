. /usr/lib/ybs/funcs

post_install() {
    gtk-query-immodules-3.0 --update-cache
    glib-compile-schemas /usr/share/glib-2.0/schemas ||true
}

pre_remove() {
    rm -f /usr/lib"$LIBDIRSUFFIX"/gtk-3.0/3.0.0/immodules.cache ||true
}

post_remove() {
    glib-compile-schemas /usr/share/glib-2.0/schemas ||true
}

post_upgrade() {
    post_install
}

