
gname="sshd"

post_install() {
    dogroupadd -r $gname
    douseradd -c "sshd PrivSep" -d "/var/lib/sshd" -s "/bin/false" -r -N -G $gname $gname
    install -m700 -d /var/lib/sshd
    chown root:sys   /var/lib/sshd ||true
}

post_remove() {
    douserdel $gname
    dogroupdel $gname
    rm -r /var/lib/sshd 2>/dev/null ||true
}

post_upgrade() {
    post_install
}

post_downgrade() {
    post_upgrade
}
