DESCRIPTION="Apache Portable Runtime Library"
HOMEPAGE="http://apr.apache.org/"
LICENSE="APACHE"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
 
SRC_URI="http://www.apache.org/dist/"$N"/"$N-$V".tar.bz2"
CHECKSUM="ffee70a111fd07372982b0550bbb14b7"

RDEPEND="util-linux-libs glibc"
BDEPEND=""
RECOMMENDED=""

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+="--enable-nonportable-atomics
             --with-devrandom=/dev/urandom 
             --with-installbuilddir=/usr/share/apr-1/build"
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}

