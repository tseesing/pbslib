DESCRIPTION="tools for generating an initramfs"
HOMEPAGE="https://github.com/StartOS/initramfs-tools"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>
          chenqixing@ivali.com"
YARCH="any"

SRC_URI="git://github.com/StartOS/initramfs-tools.git"

RDEPEND="busybox-initramfs cpio kmod systemd findutils util-linux linux-kernel gawk sed e2fsprogs"
BDEPEND=""
RECOMMENDED="fuse ntfs-3g plymouth kbd dejavu-fonts-ttf"

INSTALL="$N.install"

pbs_unpack() {
    dounpack
}

pbs_install() {
    docp etc usr "$PKGDIR"
    mkdir -p "$PKGDIR"/{etc/initramfs-tools/scripts,var/lib/initramfs-tools}
}
