DESCRIPTION="device manager for StartOS"
HOMEPAGE="https://github.com/StartOS/devicemanager"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"
YARCH="any"

SRC_URI="git://github.com/StartOS/devicemanager.git"

RDEPEND="python boost-libs(=1.50.0) lm_sensors hwids dbus-libs cairo"
RECOMMENDED="mesa-demos py-udev glew sysbench"
BDEPEND=""

DESKTOPFILE="ydm.desktop"

pbs_unpack() {
    dounpack
}

pbs_config() {
    config+=""
    doconfig
}

pbs_build() {
    domake
}

pbs_install() {
    domkinstall
}
