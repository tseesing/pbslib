DESCRIPTION="A collection of tools to configure IEEE 802.11 wireless LAN cards"
HOMEPAGE="http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/Tools.html"
LICENSE="GPL"
PACKAGER="Zhongxin Huang <huangzhongxin@ivali.com>"

SRC_URI="http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/wireless_tools."$V".tar.gz"
CHECKSUM="e06c222e186f7cc013fd272d023710cb"

RDEPEND="glibc"
BDEPEND=""

pbs_unpack() {
    dounpack
}

pbs_build() {
    domake
}

pbs_install() {
    make PREFIX="$PKGDIR"/usr INSTALL_LIB="$PKGDIR"/usr/lib"$LIBDIRSUFFIX" INSTALL_MAN="$PKGDIR"/usr/share/man install
}
