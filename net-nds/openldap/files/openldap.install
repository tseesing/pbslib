
gname="ldap"

post_install() {
    dogroupadd -g 439 $gname &>/dev/null
    douseradd -u 439 -g $gname -d /var/lib/openldap -s /bin/false $gname &>/dev/null
    chown -R $gname:$gname /var/lib/openldap &>/dev/null
}

post_remove() {
    douserdel $gname
    dogroupdel $gname
}

post_upgrade() {
    post_install
}
